<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:common="http://schemas.android.com/apk/res/com.jfo.common"
	android:id="@+id/root"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent">
	<TextView android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:text="@string/hello" />
	<Button android:text="TabBottom" android:id="@+id/Button01"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<Button android:text="TabHeader" android:id="@+id/Button02"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<Button android:text="PopupMenu" android:id="@+id/Button03"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<Button android:text="test" android:id="@+id/Button04"
		android:layout_width="wrap_content" android:layout_height="wrap_content"></Button>
	<com.jfo.common.ToggleButton android:id="@+id/toggle"
		common:backgroundOn="@drawable/toggle_on" common:backgroundOff="@drawable/toggle_off"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		common:initOn="false" />
	<com.jfo.common.SlideButton android:id="@+id/slidebutton"
	    common:background="@drawable/slide_background"
	    common:thumb="@drawable/slide_thumb"
	    common:initOn="true"
		android:layout_width="wrap_content" android:layout_height="wrap_content" />
		
		
<LinearLayout
    android:orientation="horizontal"
    android:layout_width="wrap_content"
    android:layout_height="50dip"
    android:background="#000088"
    android:gravity="center"
    >
    <ImageView
        android:background="@drawable/ic_tab_new"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
    />
    <TextView
        android:text="jfojfojfojfo"
        android:textColor="#00FF00"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:paddingLeft="6dip"
        android:paddingRight="6dip"
    />
</LinearLayout>


</LinearLayout>
