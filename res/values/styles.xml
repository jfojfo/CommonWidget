<resources>
    <style name="ToggleButtonStyle">
        <item name="backgroundOff">@drawable/mode_grid</item>
        <item name="backgroundOn">@drawable/mode_stack</item>
        <item name="initOn">false</item>
    </style>

    <style name="SlideButtonStyle">
        <item name="background">@drawable/slide_background</item>
        <item name="thumb">@drawable/slide_thumb</item>
        <item name="initOn">false</item>
    </style>
    
    <style name="PopupMenuStyle">
        <item name="popupBottom">@drawable/popup_triangle_bottom</item>
        <item name="popupContent">@drawable/popup</item>
        <item name="animStyle">@style/Animation.PopupMenu</item>
        <item name="popupOffsetX">21dip</item>
        <item name="popupOffsetY">-11dip</item>
        <item name="overlay">-16dip</item>
        <item name="padding">12dip</item>
    </style>

	<style name="PopupMenuListStyle" parent="android:Widget.ListView">
		<item name="android:listSelector">@drawable/popup_option_selected</item>
		<item name="android:cacheColorHint">@null</item>
		<item name="android:divider">@null</item>
		<item name="android:fadingEdge">none</item>
		<item name="android:drawSelectorOnTop">false</item>
	</style>

    <style name="Animation.PopupMenu" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/grow_fade_in_from_bottom</item>
        <item name="android:windowExitAnimation">@anim/shrink_fade_out_from_bottom</item>
    </style>


    <!-- for testing -->
    <style name="SlideButtonStyle.Parent">
        <item name="initOn">true</item>
    </style>

    <style name="SlideButtonStyle.my" parent="SlideButtonStyle.Parent">
        <item name="initOn">false</item>
    </style>


</resources>